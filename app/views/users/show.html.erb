<div class="row">
  <section class="user-info">
    <h1>
      <%= gravatar_for @user %>
      <%= @user.user_name %>
    </h1>
    <%= @user.website %>
    <%= @user.self_introduction %>
  </section>
  <section class="stats">
    <%= render 'shared/stats' %>
    <%= render 'follow_form' if user_signed_in? %>
  </section>
</div>

<div class="row">
    <% if @user.posts.any? %>
      <ol class="posts">
       <%= render @posts %>
      </ol>
    <% end %>
</div>
