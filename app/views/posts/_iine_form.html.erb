<div class="like">
    <% if post.iine?(current_user) %>
      <%= form_with(model: current_user.likes.find_by(post_id: post.id),
             html: { method: :delete }, local: true) do |f|  %>
　　     <%= f.submit "いいねを解除", class: "btn btn-primary" %>
      <% end %>
    <% else %>
      <%= form_with(model: current_user.likes.build, local: true) do |f| %>
        <div><%= hidden_field_tag :post_id, post.id %></div>
        <%= f.submit "いいね", class: "btn btn-primary" %>
      <% end %>
    <% end %>
</div>
